@model IEnumerable<CMCS2.Models.Claim>

@{
    ViewBag.Title = "Approved Claims";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <h1>Approved Claims</h1>

    <div class="table-container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    @* <th>Lecturer</th> *@
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Supporting Document</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        @* <td>@claim.LecturerName</td> *@
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.DocumentPath))
                            {
                                <a href="@Url.Content(claim.DocumentPath)" target="_blank">View Document</a>
                            }
                            else
                            {
                                <span>No document uploaded</span>
                            }
                        <td>@claim.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="@Url.Action("Index", "Organization")" class="btn btn-primary mt-4">Back</a>
</div>

<style>
    .table-container {
        margin-top: 20px;
        max-width: 800px;
        width: 100%;
    }

    .table {
        width: 100%;
    }
</style>
